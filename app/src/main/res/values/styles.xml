<resources>

    <!-- This the style of an popup window, usually we uses the popup window for the
     menu option ui.-->
    <style name="PopupWindowStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/ic_popup_window_bg</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/material_text_button</item>
        <item name="android:padding">@dimen/dp_8</item>
    </style>

    <style name="commonTextStyle">
        <item name="android:textScaleX">.97</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="textTitleStyle" parent="textBodyStyle">
        <item name="android:textSize">@dimen/material_text_title</item>
    </style>

    <style name="textBodyStyle" parent="commonTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
    </style>

    <style name="textButtonStyle" parent="textBodyStyle">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/material_text_button</item>
        <item name="android:background">@drawable/ic_button_selector</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="SubHeading" parent="textBodyStyle">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
    </style>

    <style name="dialog">
        <item name="android:background">@drawable/ic_dialog_bg</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>

    <style name="dialog_title" parent="textTitleStyle">
        <item name="android:textSize">@dimen/material_text_title</item>
        <item name="android:textColor">@color/black_text</item>

        <item name="android:shadowColor">@color/transparent_black</item>
        <item name="android:shadowDx">.4</item>
        <item name="android:shadowDy">.4</item>
        <item name="android:shadowRadius">.4</item>
    </style>

    <style name="dialog_text" parent="textBodyStyle">
        <item name="android:textSize">@dimen/material_text_body1</item>
        <item name="android:textColor">@color/black_text</item>

        <item name="android:shadowColor">@color/transparent_black</item>
        <item name="android:shadowDx">.4</item>
        <item name="android:shadowDy">.4</item>
        <item name="android:shadowRadius">.4</item>
    </style>

    <style name="dialog_text_action_button" parent="textButtonStyle">
        <item name="android:minWidth">@dimen/dp_70</item>
        <item name="android:minHeight">@dimen/dp_45</item>
        <item name="android:gravity">center</item>

        <item name="android:shadowColor">@color/transparent_black</item>
        <item name="android:shadowDx">.4</item>
        <item name="android:shadowDy">.4</item>
        <item name="android:shadowRadius">.4</item>

    </style>

</resources>
